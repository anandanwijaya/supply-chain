generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     Int     @id @default(autoincrement())
  username    String  @unique
  email       String  @unique
  password    String
  role        Role     @default(STAKEHOLDER)
  category    String?
  created_at  DateTime @default(now())
  
  Master_Data Master_Data[]
  Orders      Order[]
}

enum Role {
  STAKEHOLDER
  SUPPLIER
}

model Master_Data {
  product_id    Int          @id @default(autoincrement())
  product_name  String
  price         Int
  category      String
  user_id       Int

  User          User         @relation(fields: [user_id], references: [user_id])
  Quantity Quantity[]
  Order Order[]
}

model Quantity {
  quantity_id           Int           @id @default(autoincrement())
  quantity_of_product   Int           
  product_id            Int           @unique

  Master_Data           Master_Data   @relation(fields: [product_id], references: [product_id])       
}


model Order {
  order_id      Int          @id @default(autoincrement())
  product_id    Int          
  user_id       Int         
  status        StatusOrder  @default(PENDING)
  quantity      Int
  category      String
  created_at    DateTime     @default(now())
  updated_at    DateTime?

  Label Label[]
  Master_Data   Master_Data  @relation(fields: [product_id], references: [product_id])
  User          User         @relation(fields: [user_id], references: [user_id])
}

enum StatusOrder {
  PENDING
  REJECT
  ON_PROCESS
  DONE
}

model Label {
  label_id    Int     @id @default(autoincrement())
  order_id    Int
  description String
  qr_code     String

  Order      Order @relation(fields: [order_id], references: [order_id])
}